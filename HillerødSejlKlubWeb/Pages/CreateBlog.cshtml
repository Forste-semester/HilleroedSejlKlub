@page
@using HillerødSejlKlubWeb.Pages
@model CreateBlogModel


<h1>Blog Adminstration</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<h2>Create new blog</h2>
<form method="post">

    <div class="form-group">
        <label asp-for="Title">Blog Title:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Blog Description:</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-primary">Create Blog</button>
    <a href="@Url.Page("/Blog")" class="btn btn-secondary">Back to Blog List</a>

</form>