@page
@model HillerødSejlKlubWeb.Pages.CreateBookingModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Opret ny booking</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label" asp-for="Id">Vælg medlem:</label>
        <select asp-for="Id" class="form-control" required>
            <option value="">-- Vælg medlem --</option>
            @foreach (var member in Model.Users.Values)
            {
                <option value="@member.Id">@member.Name</option>
            }
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="BoatId">Vælg båd:</label>
        <select asp-for="BoatId" class="form-control" required>
            <option value="">-- Vælg båd --</option>
            @foreach (var boat in Model.Boats.Values)
            {
                <option value="@boat.Id">Name: @boat.Name Type: @boat.BoatType Size: @boat.Size</option>
            }
        </select>
        <span asp-validation-for="BoatId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="BookingDate">Booking Dato:</label>
        <input asp-for="BookingDate" type="date" class="form-control" min="@DateTime.Now" value="@DateTime.Now" required />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="ReturnHour">Forventet Retur Time (time på dagen 0-23):</label>
        <input asp-for="ReturnHour" type="number" class="form-control" min="0" max="23" required />
        <span asp-validation-for="ReturnHour" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Location">Lokation:</label>
        <input asp-for="Location" type="text" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opret Booking</button>
</form>